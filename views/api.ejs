<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>Node - Express</title>
        <link rel="stylesheet" href="/vendor/bootstrap/4.1.3/css/bootstrap.min.css"/>
        <link rel="stylesheet" href="/vendor/font-awesome/5.6.1/css/all.min.css"/>
        <link rel="stylesheet" href="/admin/css/styles.css"/>
        <link rel="stylesheet" href="/css/styles.css"/>

        <script type="text/javascript" src="/vendor/jquery/3.3.1/js/jquery-3.3.1.min.js"></script>
        <script type="text/javascript" src="/vendor/bootstrap/4.1.3/js/bootstrap.min.js"></script>
    </head>
    <body>
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 bg-image">
                    <ul class="nav navbar navbar-expand-lg bg-nav" style="list-style-type: none;">
                        <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                        <% if(user == undefined) { %>
                            <li class="nav-item"><a class="nav-link" href="/gx/login">Login</a></li>
                        <% } else { %>
                            <li class="nav-item"><a class="nav-link" href="/admin/adminDashboard">Admin Dashboard</a></li>
                            <li class="nav-item"><a class="nav-link" href="/admin/user/add">Add User</a></li>
                            <li class="nav-item"><a class="nav-link" href="/admin/profile">Profile</a></li>
                            <li class="nav-item"><a class="nav-link" href="/gx/logout">Logout</a></li>
                        <% } %>
                    </ul>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <header>
                        <h3><%= (user != undefined) ? user.displayName : '' %> Welcome to the API page.</h3>
                    </header>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div style="border: 2px solid #777; width: 320px; padding: 20px; ">
                        <a class="nav-link" href="/admin/api/messages">Get Message</a>
                    </div>
                    <div style="border: 2px solid #777; width: 320px; padding: 20px; margin-top: 5px;">
                        <form id="msgForm" onsubmit="getMessage();">
                            <p>Get Message By Id</p>
                            <input id="mid" type="text" placeholder="value" maxlength="5" required/>
                            <button type="submit">Get Message</button>
                        </form>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div>
                        <p>Version: <%= data.version %></p>
                        <br/><br/>
                        <p>Message: <%= data.message %></p>
                    </div>
                </div>
            </div>
        </div>

        <script>
            function getMessage() {
                let form = document.getElementById('msgForm');
                let val = document.getElementById('mid').value;
                form.action = '/admin/api/message/' + val;
                form.submit();
            };
        </script>
    </body>
</html>
